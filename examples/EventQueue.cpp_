#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto evq = EventQueueT<1>();

void consumer()
{
	unsigned x;

	for (;;)
	{
		evq.wait(&x);
		led = x;
	}
}

void producer()
{
	unsigned x = 1;

	for (;;)
	{
		ThisTask::delay(SEC);
		evq.give(x);
		x = (x << 1) | (x >> 3);
	}
}

auto cons = Task(consumer);
auto prod = Task(producer);

int main()
{
	cons.start();
	prod.start();

	ThisTask::stop();
}
