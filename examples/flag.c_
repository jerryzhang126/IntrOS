#include <stm32f4_discovery.h>
#include <os.h>

OS_FLG(flg, 0);

void consumer()
{
	flg_wait(flg, 3, flgAll, NULL);
	LED_Tick();
}

void producer()
{
	tsk_delay(SEC/2);
	flg_give(flg, 1, NULL);
	tsk_delay(SEC/2);
	flg_give(flg, 2, NULL);
}

OS_TSK(cons, consumer);
OS_TSK(prod, producer);

int main()
{
	LED_Init();

	tsk_start(cons);
	tsk_start(prod);
	tsk_stop();
}
